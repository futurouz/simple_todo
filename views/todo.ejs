            <div class="col-md-5 col-md-offset-1">
                <span class="date-text">Today</span><span class="time"> <%= moment %></span>
              
            </div>
        </div>
        <div class="row">    
            <div class="col-md-4 col-md-offset-4">
                <form method="POST" action ="/todo">
                    <div class="input-group">
                        <input type="text" name="item"  class="form-control" placeholder="add your task.." required>
                        <span class="input-group-btn">
                          <button type="submit" class="btn">+  Add item</button>
                        </span>                          
                    </div>
                </form>
                <ul class="list-group">
                    <% for(var i = todo.length -1; i >= 0; i--) { %>
                        <li class=" text-center"><%=  todo[i].item %></li>
                    <% } %>
                </ul>
            </div>
        </div>       
